<div class="container py-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="text-tamu-maroon fw-bold">Your Company Verifications</h2>
    <%= link_to "New Verification", new_company_verification_path, class: "tamu-btn tamu-btn-maroon text-decoration-none" %>
  </div>

  <!-- Pending Verifications -->
  <h3 class="fw-semibold mb-2">Pending Verifications</h3>
  <% if @pending_verifications.any? %>
    <table class="table table-bordered mb-5">
      <thead class="table-light">
        <tr>
          <th>Company Name</th>
          <th>Company Email</th>
          <th>Requested At</th>
          <th class="text-center">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @pending_verifications.each do |cv| %>
          <tr>
            <td><%= cv.company_name %></td>
            <td><%= cv.company_email %></td>
            <td><%= cv.created_at.strftime("%b %d, %Y") %></td>
            <td class="text-center">
              <%= button_to "Delete", company_verification_path(cv), method: :delete,
                      data: { confirm: "Are you sure you want to delete this verification request?" },
                      class: "btn btn-sm btn-outline-danger" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p class="text-muted mb-5">No pending verification requests.</p>
  <% end %>

  <!-- Verified Verifications -->
  <h3 class="fw-semibold mb-2">Verified Companies</h3>
  <% if @verified_verifications.any? %>
    <table class="table table-bordered">
      <thead class="table-light">
        <tr>
          <th>Company Name</th>
          <th>Company Email</th>
          <th>Verified At</th>
          <th class="text-center">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @verified_verifications.each do |cv| %>
          <tr>
            <td><%= cv.company_name %></td>
            <td><%= cv.company_email %></td>
            <td><%= cv.verified_at ? cv.verified_at.strftime("%b %d, %Y") : "N/A" %></td>
            <td class="text-center">
              <%= button_to "Delete", company_verification_path(cv), method: :delete,
                      data: { confirm: "Are you sure you want to delete this verification request?" },
                      class: "btn btn-sm btn-outline-danger" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p class="text-muted">No verified companies yet.</p>
  <% end %>
</div>
