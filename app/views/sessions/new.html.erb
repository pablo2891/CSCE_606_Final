<div class="min-vh-100 d-flex align-items-center justify-content-center py-5" style="background-color: #f6f6f6;">
  <div class="w-100" style="max-width: 420px;">
    <div class="card shadow-lg rounded-3">
      <div class="card-body p-4">

        <h1 class="text-center mb-4 text-maroon fw-bold">Log In</h1>

        <%= form_with model: @user, url: session_path, local: true, data: { turbo: false } do |f| %>

          <div class="mb-3">
            <%= f.label :email, class: "form-label fw-semibold" %>
            <%= f.email_field :email, required: true, class: "form-control" %>
          </div>

          <div>
            <%= f.label :password, class: "form-label fw-semibold" %>
            <%= f.password_field :password, required: true, class: "form-control" %>
          </div>

          <% if flash[:error] %>
            <div class="text-danger text-center small mb-2"><%= flash[:error] %></div>
          <% end %>

          <div class="d-grid mt-3 mb-3">
            <%= f.submit "Login", class: "btn btn-maroon" %>
          </div>

        <% end %>

        <div class="text-center mt-3">
          <%= link_to "Sign Up", new_user_path, class: "btn btn-outline-maroon w-100" %>
        </div>

      </div>
    </div>
  </div>
</div>
