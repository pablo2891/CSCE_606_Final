<div class="container py-5">
  <div class="card shadow-sm rounded-lg p-4">
    <h2 class="text-tamu-maroon fw-bold mb-4">Edit Education</h2>
      <%= form_with url: update_education_user_path(@user, index: @index), scope: :education, method: :patch, local: true do |f| %>
        <div class="mb-3">
          <%= f.label :degree, class: "form-label fw-semibold" %>
          <%= f.text_field :degree, class: "form-control", value: @education["degree"], required: true %>
        </div>
        <div class="mb-3">
          <%= f.label :school, class: "form-label fw-semibold" %>
          <%= f.text_field :school, class: "form-control", value: @education["school"], required: true %>
        </div>
        <div class="mb-3">
          <%= f.label :start_date, class: "form-label fw-semibold" %>
          <%= f.date_field :start_date, class: "form-control", value: @education["start_date"], required: true %>
        </div>
        <div class="mb-3">
          <%= f.label :end_date, class: "form-label fw-semibold" %>
          <%= f.date_field :end_date, class: "form-control", value: @education["end_date"] %>
        </div>
        <div class="mb-3">
          <%= f.label :description, class: "form-label fw-semibold" %>
          <%= f.text_area :description, rows: 3, class: "form-control", value: @education["description"] %>
        </div>

        <div class="mb-3">
          <%= f.submit "Update Education", class: "tamu-btn tamu-btn-maroon w-100" %>
        </div>
      <% end %>

      <div class="d-flex align-items-center justify-content-center pt-3">
        <%= button_to "Delete Education",
            delete_education_user_path(@user, @index),
            method: :delete,
            data: { confirm: "Are you sure you want to delete this education?" },
            form: { class: "d-inline" },
            class: "btn btn-danger text-white me-2" %>

        <%= link_to "Cancel", user_path(@user), class: "tamu-btn btn-outline-maroon" %>
      </div>
  </div>
</div>
