<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-md-10">
      <!-- Profile Card -->
      <div class="card shadow-lg rounded-lg border-tamu-gray-300">
        <!-- Header -->
        <div class="card-header bg-tamu-maroon text-tamu-white d-flex justify-content-between align-items-center">
            <div>
                <h2 class="mb-1 d-flex align-items-center">
                <%= @user.full_name %>
                
                <% if @user.is_tamu_verified %>
                    <span class="ms-2 badge bg-tamu-white text-tamu-maroon font-bold p-2 rounded-md">
                    TAMU Verified
                    </span>
                <% end %>
                </h2>
                <p class="mb-0 font-medium"><%= @user.headline.presence || "Your headline goes here" %></p>
            </div>
            <div>
                <%= button_to "Log Out", session_path, method: :delete, class: "tamu-btn tamu-btn-maroon" %>
            </div>
        </div>

        <div class="card-body bg-tamu-gray-100">
          <div class="row">
            <!-- Left Sidebar -->
            <div class="col-md-4 mb-4">
              <div class="card rounded-md p-3 border-tamu-gray-300">
                <h5 class="font-bold mb-2">Contact</h5>
                <p class="mb-1"><strong>Email:</strong> <%= @user.email %></p>
                <% if @user.linkedin_url.present? %>
                  <p class="mb-1"><strong>LinkedIn:</strong> <a href="<%= @user.linkedin_url %>" target="_blank" class="text-tamu-maroon hover:underline"><%= @user.linkedin_url %></a></p>
                <% end %>
                <% if @user.github_url.present? %>
                  <p class="mb-1"><strong>GitHub:</strong> <a href="<%= @user.github_url %>" target="_blank" class="text-tamu-maroon hover:underline"><%= @user.github_url %></a></p>
                <% end %>
                <% if @user.resume_url.present? %>
                  <p class="mb-1"><strong>Resume:</strong> <a href="<%= @user.resume_url %>" target="_blank" class="text-tamu-maroon hover:underline">View</a></p>
                <% end %>
              </div>
            </div>

            <!-- Main Content -->
            <div class="col-md-8">
              <!-- Summary -->
              <div class="mb-4 p-3 bg-tamu-white rounded-md border-tamu-gray-300">
                <h5 class="font-bold mb-2">Summary</h5>
                <p><%= @user.summary.presence || "No summary provided yet." %></p>
              </div>

              <!-- Experiences -->
              <div class="mb-4 p-3 bg-tamu-white rounded-md border-tamu-gray-300">
                <h5 class="font-bold mb-2">Experiences</h5>
                <% if @user.experiences_data.any? %>
                  <% @user.experiences_data.each do |exp| %>
                    <div class="mb-2">
                      <p class="mb-0 font-medium"><%= exp["title"] %> at <%= exp["company"] %></p>
                      <small class="text-tamu-gray-700"><%= exp["start_date"] %> - <%= exp["end_date"].presence || "Present" %></small>
                      <p class="mb-0"><%= exp["description"] %></p>
                    </div>
                  <% end %>
                <% else %>
                  <p class="text-tamu-gray-700">No experiences added yet.</p>
                <% end %>
              </div>

              <!-- Education -->
              <div class="mb-4 p-3 bg-tamu-white rounded-md border-tamu-gray-300">
                <h5 class="font-bold mb-2">Education</h5>
                <% if @user.educations_data.any? %>
                  <% @user.educations_data.each do |edu| %>
                    <div class="mb-2">
                      <p class="mb-0 font-medium"><%= edu["degree"] %> at <%= edu["school"] %></p>
                      <small class="text-tamu-gray-700"><%= edu["start_date"] %> - <%= edu["end_date"].presence || "Present" %></small>
                      <p class="mb-0"><%= edu["description"] %></p>
                    </div>
                  <% end %>
                <% else %>
                  <p class="text-tamu-gray-700">No education added yet.</p>
                <% end %>
              </div>

            </div> <!-- End Main Content -->
          </div> <!-- End Row -->
        </div> <!-- End Card Body -->
      </div> <!-- End Card -->
    </div>
  </div>
</div>
