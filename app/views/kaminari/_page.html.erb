<% if page.current? %>
  <li class="page-item">
    <%= content_tag :a, page, data: { remote: remote }, rel: page.rel, class: 'page-link', style: 'color: #FFFFFF !important; background-color: #500000 !important;' %>
  </li>
<% else %>
  <li class="page-item">
    <%= link_to page, url, remote: remote, rel: page.rel, class: 'page-link', style: 'color: #500000 !important;' %>
  </li>
<% end %>
